@model CatalogOnline.Logic.SendMessageViewModel
@* @model List<Profesor> *@

@{
    ViewData["Title"] = "Trimite Mesaj";
}

<div class="container">
    <h2>Trimite Mesaj către Profesor</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="SendMessage" method="post">
        <div class="form-group">
            <label for="Mesaj">Mesaj:</label>
            <textarea asp-for="Mesaj" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="Mesaj" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CatedraList">Selectează Catedra:</label>
            <select asp-for="CatedraList" class="form-control" id="CatedraList" multiple>
                <option value="">Catedra</option>
                @foreach (var group in ViewBag.CatedraList)
                {
                    <option value="@group">@group</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Profesori:</label>
            <div id="professorCheckboxes">
                @foreach (var professor in ViewBag.ProfesorList)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ProfesorIdList" value="@professor.Id" id="professor-@professor.Id">
                        <label class="form-check-label" for="professor-@professor.Id">@professor.Nume</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Trimite Mesajul</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

