@model List<CatalogOnline.Models.Materie>

@{
    ViewData["Title"] = "Materii";
}

<div class="container mt-4">
    <h2>Materii</h2>
    <a asp-action="Create" class="btn btn-primary mb-2">Adaugă Materie</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nume</th>
                <th>Credite</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nume</td>
                    <td>@item.Credite</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifică</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Șterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
