@model CatalogOnline.Models.Materie

@{
    ViewData["Title"] = "Șterge Materie";
}

<div class="container mt-4">
    <h2>Șterge Materie</h2>
    <h3>Ești sigur că vrei să ștergi această materie?</h3>
    <div>
        @* <h4>@Model.Nume</h4> *@
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nume
            </dt>
            <dd class="col-sm-10">
                @Model.Nume
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Credite
            </dt>
            <dd class="col-sm-10">
                @Model.Credite
            </dd>
        </dl>
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Șterge" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Anulează</a>
        </form>
    </div>
</div>
